<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeliveryInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1E8ED"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#475188"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_cancel">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="100dp"
                android:text="Thanh toán"
                android:textColor="#FFFFFF"
                android:textSize="22dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CẢM ƠN BẠN ĐÃ MUA HÀNG"
                android:textColor="#66BB6A"
                android:textSize="19dp"
                android:textStyle="bold"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Bạn đã đặt hàng thành công"
                android:textColor="#000000"
                android:textSize="17dp"></TextView>

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Số đơn hàng: "
                android:textColor="#000000"
                android:textSize="17dp"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="17dp"
                android:text="Bạn sẽ sớm nhận được email xác nhận đơn hàng từ chúng tôi"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="17dp"
                android:text="Đơn hàng của bạn sẽ được thanh toán ngay sau khi nhận hàng"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="17dp"
                android:text="Bạn cần hỗ trợ, vui lòng liên hệ"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="17dp"
                android:text="1900.34.56.78"
                android:textColor="#fe9028"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>