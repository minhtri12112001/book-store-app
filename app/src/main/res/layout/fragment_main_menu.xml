<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E1E8ED">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#475188"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/search_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/search_view_background"
                        android:textColor="#FFFFFF"
                        app:queryHint="Tìm kiếm sách, tác giả">

                    </androidx.appcompat.widget.SearchView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/border_top_radius">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NHÀ SÁCH SATO"
                    android:textSize="20dp"
                    android:textColor="#253F4C"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Luôn cập nhật những tựa sách hay nhất, mới nhất với giá cả phù hợp nhất"
                    android:textSize="12dp"
                    android:textColor="#A2B2BA"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Top 10 trending"
                    android:textColor="#253F4C"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/book_detail"
                            android:layout_width="150dp"
                            android:layout_height="80pt"
                            android:src="@drawable/sapiens" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="80pt"
                            android:src="@drawable/viet_su_giai_thoai" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="80pt"
                            android:src="@drawable/oc_sang_suot" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="80pt"
                            android:src="@drawable/face_book" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="80pt"
                            android:src="@drawable/tuong_lai_cua_quyen_luc" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10pt"
                    android:text="Mới xuất bản"
                    android:textColor="#253F4C"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_book_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_top_10_trending_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>