<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="25dp"
    android:background="@drawable/cart_item_backround">
    <ImageView
        android:id="@+id/iv_cart_item_image"
        android:layout_width="wrap_content"
        android:layout_height="40pt"
        >
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/tv_cart_item_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#253F4C"
            android:text="Book name"
            android:maxLines="1"
            android:ellipsize="end">
        </TextView>
        <TextView
            android:id="@+id/tv_cart_item_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fe9028"
            android:text="Total cost"
            android:layout_marginTop="10dp">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/btn_minus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/minus" />

                <EditText
                    android:id="@+id/et_cart_item_total_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:hint="1"
                    android:text="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#253F4C"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/btn_plus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:src="@drawable/plus" />
            </LinearLayout>
            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="130dp">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>