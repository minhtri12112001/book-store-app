<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1E8ED"
    tools:context=".UpdateUserInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#475188"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_userInformation"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back">

        </ImageView>
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật thông tin"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textColor="#253F4C"
            android:textStyle="bold"
            android:textSize="15dp">
        </TextView>
        <EditText
            android:id="@+id/et_userFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_background"
            android:textSize="15dp"
            android:textColor="#253F4C">

        </EditText>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#253F4C"
            android:textStyle="bold"
            android:textSize="15dp">
        </TextView>
        <EditText
            android:id="@+id/et_userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_background"
            android:textSize="15dp"
            android:textColor="#253F4C">

        </EditText>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="#253F4C"
            android:textStyle="bold"
            android:textSize="15dp">
        </TextView>
        <EditText
            android:id="@+id/et_userPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_background"
            android:textSize="15dp"
            android:textColor="#253F4C">

        </EditText>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ liên hệ"
            android:textColor="#253F4C"
            android:textStyle="bold"
            android:textSize="15dp">
        </TextView>
        <EditText
            android:id="@+id/et_userAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_background"
            android:textSize="15dp"
            android:textColor="#253F4C">
        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/btn_update_userInformation"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật">

    </Button>
</LinearLayout>